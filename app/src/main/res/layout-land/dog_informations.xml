<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="53dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="220dp"
                    android:layout_height="109dp"
                    android:layout_marginTop="28dp"
                    android:contentDescription="@string/logo"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/photoEdit"
                    app:layout_constraintHorizontal_bias="0.497"
                    app:layout_constraintStart_toEndOf="@+id/signsBtnEdit"
                    app:layout_constraintTop_toBottomOf="@+id/breedingBtnEdit"
                    app:layout_constraintVertical_bias="1.0"
                    app:srcCompat="@drawable/anigif"
                    tools:ignore="MissingConstraints" />

                <ImageView
                    android:id="@+id/photoEdit"
                    android:layout_width="184dp"
                    android:layout_height="249dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/roundcornersrecyclerview"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_dog"
                    tools:ignore="VectorDrawableCompat" />

                <Button
                    android:id="@+id/healthButton2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="84dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/round_white"
                    android:drawableStart="@drawable/ic_edit"
                    android:drawablePadding="100dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/photoEdit"
                    app:layout_constraintTop_toBottomOf="@+id/photoEdit" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Imię:"
                    android:textColor="#333333"
                    app:layout_constraintBottom_toTopOf="@+id/dogNameEdit"
                    app:layout_constraintStart_toStartOf="@+id/dogNameEdit" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rasa:"
                    android:textColor="#333333"
                    app:layout_constraintBottom_toTopOf="@+id/dogRaceEdit"
                    app:layout_constraintStart_toStartOf="@+id/dogRaceEdit" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data urodzenia:"
                    android:textColor="#333333"
                    app:layout_constraintBottom_toTopOf="@+id/dogName2"
                    app:layout_constraintStart_toStartOf="@+id/dogName2" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kolor:"
                    android:textColor="#333333"
                    app:layout_constraintBottom_toTopOf="@+id/dogColorEdit"
                    app:layout_constraintStart_toStartOf="@+id/dogColorEdit" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Płeć:"
                    android:textColor="#333333"
                    app:layout_constraintBottom_toTopOf="@+id/dogName5"
                    app:layout_constraintStart_toStartOf="@+id/dogName5" />

                <TextView
                    android:id="@+id/dogNameEdit"
                    android:layout_width="184dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    android:text="Billy"
                    android:textColor="#333333"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/dogRaceEdit"
                    android:layout_width="184dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:text="Mieszaniec"
                    android:textColor="#333333"
                    android:textSize="21sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dogNameEdit" />

                <TextView
                    android:id="@+id/dogName2"
                    android:layout_width="184dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:text="2011-02-01"
                    android:textColor="#333333"
                    android:textSize="21sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dogRaceEdit" />

                <TextView
                    android:id="@+id/dogColorEdit"
                    android:layout_width="184dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:text="Tricolor"
                    android:textColor="#333333"
                    android:textSize="21sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dogName2" />

                <TextView
                    android:id="@+id/dogName5"
                    android:layout_width="64dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:text="Male"
                    android:textColor="#333333"
                    android:textSize="21sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dogColorEdit" />

                <Button
                    android:id="@+id/holderButton"
                    android:layout_width="176dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/roundcornersrecyclerview"
                    android:text="Chip"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toStartOf="@+id/photoEdit"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/dogNameEdit"
                    app:layout_constraintTop_toBottomOf="@+id/chipBtnEdit" />

                <Button
                    android:id="@+id/tattooBtnEdit"
                    android:layout_width="176dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/roundcornersrecyclerview"
                    android:text="Tatuaż"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toStartOf="@+id/photoEdit"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/dogRaceEdit"
                    app:layout_constraintTop_toBottomOf="@+id/holderButton" />

                <Button
                    android:id="@+id/ownerBtnEdit"
                    android:layout_width="176dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/roundcornersrecyclerview"
                    android:text="Właściciel"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toStartOf="@+id/photoEdit"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/dogColorEdit"
                    app:layout_constraintTop_toBottomOf="@+id/signsBtnEdit" />

                <Button
                    android:id="@+id/signsBtnEdit"
                    android:layout_width="175dp"
                    android:layout_height="58dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/roundcornersrecyclerview"
                    android:text="Znaki szczególne"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toStartOf="@+id/photoEdit"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/dogName2"
                    app:layout_constraintTop_toBottomOf="@+id/tattooBtnEdit" />

                <Button
                    android:id="@+id/notesBtnEdit"
                    android:layout_width="176dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/roundcornersrecyclerview"
                    android:text="Notatki"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toStartOf="@+id/photoEdit"
                    app:layout_constraintStart_toEndOf="@+id/chipBtnEdit"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/breedingBtnEdit"
                    android:layout_width="176dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/roundcornersrecyclerview"
                    android:text="Hodowla"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toStartOf="@+id/photoEdit"
                    app:layout_constraintStart_toEndOf="@+id/holderButton"
                    app:layout_constraintTop_toBottomOf="@+id/notesBtnEdit" />

                <Button
                    android:id="@+id/chipBtnEdit"
                    android:layout_width="176dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/roundcornersrecyclerview"
                    android:text="Chip"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toStartOf="@+id/photoEdit"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/dogNameEdit"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>