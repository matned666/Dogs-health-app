<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

        <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="-74dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF">

            <Button
                android:id="@+id/backInfo"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/roundcornersrecyclerviewblack"
                android:text="@string/powr_t"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/photoInfo"
                app:layout_constraintStart_toStartOf="@+id/tattooBtnInfo"
                app:layout_constraintTop_toBottomOf="@+id/tattooBtnInfo" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="220dp"
                android:layout_height="109dp"
                android:layout_marginTop="16dp"
                android:contentDescription="@string/logo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/backInfo"
                app:layout_constraintVertical_bias="1.0"
                app:srcCompat="@drawable/anigif"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/photoInfo"
                android:layout_width="126dp"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/roundcornersrecyclerview"
                android:contentDescription="@string/dog_image"
                app:layout_constraintBottom_toBottomOf="@+id/dogColorInfo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_stat_name"
                tools:ignore="VectorDrawableCompat" />

            <Button
                android:id="@+id/editDogBtnFromInfo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/round_white"
                android:drawableStart="@drawable/ic_edit"
                android:drawablePadding="100dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dogSexInfo" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/imi"
                android:textColor="#333333"
                app:layout_constraintBottom_toTopOf="@+id/dogNameInfo"
                app:layout_constraintStart_toStartOf="@+id/dogNameInfo" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rasa"
                android:textColor="#333333"
                app:layout_constraintBottom_toTopOf="@+id/dogRaceInfo"
                app:layout_constraintStart_toStartOf="@+id/dogRaceInfo" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/data_urodzenia"
                android:textColor="#333333"
                app:layout_constraintBottom_toTopOf="@+id/birthDateInfo"
                app:layout_constraintStart_toStartOf="@+id/birthDateInfo" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kolor"
                android:textColor="#333333"
                app:layout_constraintBottom_toTopOf="@+id/dogColorInfo"
                app:layout_constraintStart_toStartOf="@+id/dogColorInfo" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/p_e"
                android:textColor="#333333"
                app:layout_constraintBottom_toTopOf="@+id/dogSexInfo"
                app:layout_constraintStart_toStartOf="@+id/dogSexInfo" />

            <TextView
                android:id="@+id/dogNameInfo"
                android:layout_width="184dp"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:hint="@string/imi_psa"
                android:textColor="#333333"
                android:textColorHint="#CAC7C7"
                android:textSize="21sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/dogRaceInfo"
                android:layout_width="184dp"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:hint="@string/rasa_psa"
                android:textColor="#333333"
                android:textColorHint="#CAC7C7"
                android:textSize="21sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dogNameInfo" />

            <TextView
                android:id="@+id/birthDateInfo"
                android:layout_width="184dp"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:hint="@string/dada_urodzenia"
                android:textColor="#333333"
                android:textColorHint="#CAC7C7"
                android:textSize="21sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dogRaceInfo" />

            <TextView
                android:id="@+id/dogColorInfo"
                android:layout_width="184dp"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:hint="@string/kolor_psa"
                android:textColor="#333333"
                android:textColorHint="#CAC7C7"
                android:textSize="21sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/birthDateInfo" />

            <TextView
                android:id="@+id/dogSexInfo"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:hint="@string/p_e2"
                android:textColor="#333333"
                android:textColorHint="#CAC7C7"
                android:textSize="21sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dogColorInfo" />

            <Button
                android:id="@+id/signsBtnInfo"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/roundcornersrecyclerview"
                android:text="@string/znaki_szczeg_lne"
                android:textColor="#000000"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/breedingBtnInfo"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/dogNameInfo"
                app:layout_constraintTop_toBottomOf="@+id/chipBtnInfo" />

            <Button
                android:id="@+id/tattooBtnInfo"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/roundcornersrecyclerview"
                android:text="@string/tatua"
                android:textColor="#000000"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/ownerBtnInfo"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/dogRaceInfo"
                app:layout_constraintTop_toBottomOf="@+id/signsBtnInfo" />

            <Button
                android:id="@+id/ownerBtnInfo"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/roundcornersrecyclerview"
                android:text="@string/w_a_ciciel"
                android:textColor="#000000"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/photoInfo"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/tattooBtnInfo"
                app:layout_constraintTop_toTopOf="@+id/tattooBtnInfo" />

            <Button
                android:id="@+id/notesBtnInfo"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/roundcornersrecyclerview"
                android:text="@string/notatki"
                android:textColor="#000000"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/photoInfo"
                app:layout_constraintStart_toEndOf="@+id/chipBtnInfo"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/breedingBtnInfo"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/roundcornersrecyclerview"
                android:text="@string/hodowla"
                android:textColor="#000000"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/photoInfo"
                app:layout_constraintStart_toEndOf="@+id/signsBtnInfo"
                app:layout_constraintTop_toTopOf="@+id/signsBtnInfo" />

            <Button
                android:id="@+id/chipBtnInfo"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/roundcornersrecyclerview"
                android:text="@string/chip"
                android:textColor="#000000"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/notesBtnInfo"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/dogNameInfo"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>