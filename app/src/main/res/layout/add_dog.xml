<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="-33dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/cancelAdd"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/roundcornersrecyclerviewred"
                    android:text="Anuluj"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/saveDogAdd" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="220dp"
                    android:layout_height="109dp"
                    android:layout_marginTop="32dp"
                    android:contentDescription="@string/logo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cancelAdd"
                    app:srcCompat="@drawable/anigif"
                    tools:ignore="MissingConstraints" />

                <ImageView
                    android:id="@+id/photoAdd"
                    android:layout_width="180dp"
                    android:layout_height="280dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/roundcornerimageframe"
                    android:contentDescription="@string/dog_photo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_stat_name"
                    tools:ignore="VectorDrawableCompat" />

                <EditText
                    android:id="@+id/dogNameAdd"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:autofillHints=""
                    android:background="@drawable/roundcornerstext"
                    android:hint="@string/imi_psa"
                    android:inputType="textCapSentences"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textColorHint="#AFAFAF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/photoAdd"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/dogRaceAdd"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/roundcornerstext"
                    android:inputType="textCapSentences"
                    android:hint="@string/rasa_psa"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textColorHint="#AFAFAF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/photoAdd"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dogNameAdd"
                    android:autofillHints="" />

                <EditText
                    android:id="@+id/dogColorAdd"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/roundcornerstext"
                    android:inputType="textCapSentences"
                    android:hint="@string/kolor_psa"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textColorHint="#AFAFAF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/photoAdd"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dogDateOfBirthAdd"
                    android:autofillHints="" />

                <Button
                    android:id="@+id/addDogDialogPictureFromGallery"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/roundcornersrecyclerview"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:text="@string/zdj_cie_z_galerii"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/photoAdd"
                    app:layout_constraintTop_toBottomOf="@+id/photoAdd" />

                <Button
                    android:id="@+id/saveDogAdd"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/roundcornersrecyclerviewblack"
                    android:text="@string/zapisz"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/addDogDialogPictureFromGallery" />

                <EditText
                    android:id="@+id/dogDateOfBirthAdd"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/roundcornerstext"
                    android:textAlignment="center"
                    android:hint="@string/data_urodzenia"
                    android:inputType="date"
                    android:textColor="#000000"
                    android:textColorHint="#AFAFAF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/photoAdd"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dogRaceAdd"
                    android:autofillHints="" />

                <Spinner
                    android:id="@+id/dogSexAdd"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/roundcornerstext"
                    android:entries="@array/sexTypes"
                    android:soundEffectsEnabled="true"
                    app:layout_constraintEnd_toStartOf="@+id/photoAdd"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dogColorAdd" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>