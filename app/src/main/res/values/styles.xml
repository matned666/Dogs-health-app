<resources xmlns:tools="http://schemas.android.com/tools">

<!-- Base application theme. -->
<style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
</style>

<style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">false</item>
</style>

    <style name="editTextStyle_frameRoundBlackCorners_whiteBackground_blackText">
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">top</item>
        <item name="android:ems">10</item>
        <item name="android:textColorHint">#AFAFAF</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="editTextStyle_frameRoundBlackCorners_whiteBackground_blackText.margin">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="editTextStyle_frameRoundBlackCorners_whiteBackground_blackText.margin.x1">
        <item name="android:layout_height">26dp</item>
        <item name="android:background">@drawable/roundcornerstext</item>
        <item name="android:inputType">textCapSentences|textMultiLine</item>
    </style>

    <style name="editTextStyle_frameRoundBlackCorners_whiteBackground_blackText.margin.x2">
        <item name="android:layout_height">52dp</item>
        <item name="android:background">@drawable/roundcornerstext</item>
        <item name="android:inputType">textCapSentences|textMultiLine</item>
    </style>

    <style name="editTextStyle_frameRoundBlackCorners_whiteBackground_blackText.margin.x4">
        <item name="android:layout_height">104dp</item>
        <item name="android:background">@drawable/roundcornerstext</item>
        <item name="android:inputType">textCapSentences|textMultiLine</item>
    </style>

    <style name="editTextStyle_frameRoundBlackCorners_whiteBackground_blackText.margin.x6">
        <item name="android:layout_height">156dp</item>
        <item name="android:background">@drawable/roundcornerstext</item>
        <item name="android:inputType">textCapSentences|textMultiLine</item>
    </style>

    <style name="editTextStyle_frameRoundBlackCorners_whiteBackground_blackText.thinSquareFrame">
        <item name="android:background">@drawable/squarecornersrecyclerviewelementthin</item>
        <item name="android:inputType">textCapSentences|textMultiLine</item>
    </style>

    <style name="editTextStyle_frameRoundBlackCorners_whiteBackground_blackText.noFrame">
        <item name="android:background">@drawable/squarecornersrecyclerviewelementnoframe</item>
        <item name="android:inputType">textCapSentences|textMultiLine</item>
    </style>

    <style name="dogDataDialog_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="label_noFrame_black12Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="textStyle">
        <item name="android:textSize">21sp</item>
        <item name="android:textColorHint">#AFAFAF</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textColor">#000000</item>
    </style>


</resources>

